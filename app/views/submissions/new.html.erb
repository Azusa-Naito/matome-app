<%= render "shared/student_classroom_bar" %>
<div class="input-flame">
  <h2>宿題</h2>
  <%= form_with url: classroom_homework_submissions_path, model: @submission, local: true do |f| %>
    <%# エラー文 %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <%= f.label :content, "宿題", class: "form-label" %>
      <span class="indispensable">必須</span>
      <%= f.text_area :content, class: "form-control", placeholder: '宿題内容を入力してください' %>
    </div>
    <div class="form-group">
      <p><b>クリックしてファイルをアップロード</b></p>
      <%= f.file_field :file, name: 'item[images]', id: 'item-image' %>
      <div id="image-list" class="upload-image">
      <%# ここに<input id="item_image_[番号]" name="item[images][]" type="file">が入る%>
      </div>
    </div>

    <div class="submit">
      <%= f.submit %>
    </div>
  <% end %>
</div>
