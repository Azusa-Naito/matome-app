<ul class="header-ul">
  <%# 学生ログイン時のヘッダー %>
  <% if student_signed_in? %>
    <li class="header-li">
    <%#= link_to student_path(current_student.id) do %>
      <div class="user-box">
        <div>
          <%= image_tag current_student.image.url, class: "user-image" %>
        </div>
        <div class="user-nickname"><%= current_student.nickname %></div>
      </div>
    </li>
    <div>
    <%= link_to 'ログアウト', destroy_student_session_path, method: :delete, class: "logout" %>
    </div>
  <%# 学生ログイン時のヘッダー %>
  <%# 先生ログイン時のヘッダー %>
  <% elsif teacher_signed_in? %>
  <!-- Navigation-->
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="sideNav">
      <a class="navbar-brand js-scroll-trigger" href="#">
          <span class="d-none d-lg-block"><%= image_tag current_teacher.image.url, class: "img-fluid img-profile rounded-circle mx-auto mb-2" %></span>
      </a>
          <div class="d-block"><%= current_teacher.nickname %></div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav">
              <li class="nav-item"><%= link_to 'ログアウト', destroy_teacher_session_path, method: :delete, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "クラス作成", new_classroom_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "インフォメーション作成", new_information_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "インフォメーション一覧", informations_path, class: "nav-link" %></li>
          </ul>
      </div>
  </nav>
  <%# 先生ログイン時のヘッダー %>
  <%# ゲストのヘッダー %>
  <% else %>
  <%# ゲストのヘッダー %>
  <p><%= link_to "講師はこちら", new_teacher_session_path %></p>
  <p><%= link_to "学生はこちら", new_student_session_path %></p>
    <%# <li class="header-li"><%= link_to 'トップページ', root_path, method: :get, class: "root" % ></li> %>
  <% end %>
</ul>

<%# 講師表示内容 %>
<% if teacher_signed_in? %>
  <%# 担任クラスの表示 %>
  <h4>担任クラス一覧</h4>
  <% @classrooms_hr.each do |classroom| %>
    <%= render partial: "classroom_each", locals: {classroom: classroom} %>
  <% end %>
  <%# /担任クラスの表示 %>
  <%# 担当クラスの表示 %>
  <h4>担当クラス一覧</h4>
  <% @classrooms_cl.each do |classroom| %>
    <%= render partial: "classroom_each", locals: {classroom: classroom} %>
  <% end %>
<%# /担当クラスの表示 %>
  <h4>クラス一覧</h4>
  <%# 全てのクラスルームの表示 %>
  <% @classrooms.each do |classroom| %>
    <%= render partial: "classroom_each", locals: {classroom: classroom} %>
  <% end %>
  <%# /全てのクラスルームの表示 %>
<% end %>
<%# /講師表示内容 %>

<%# 学生表示内容 %>
<% if student_signed_in? %>
  <% @classrooms_st.each do |classroom| %>
    <%= render partial: "classroom_each", locals: {classroom: classroom} %>
  <% end %>
<% end %>
<%# /学生表示内容 %>
