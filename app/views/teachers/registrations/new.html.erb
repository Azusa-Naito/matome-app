<%= render "shared/default_bar" %>

<h2>講師新規登録</h2>

<div class="class-box">
  <%= form_with model: @teacher, url: teacher_registration_path, class: 'registration-main', local: true do |f| %>
  <div class="form-wrap">
    <div class="form-header">
      <h1 class="form-header-text">
        情報入力
      </h1>
    </div>
    
    <%# エラー文 %>
    <%= render 'shared/error_messages', model: f.object %>

    <%# 社員番号 %>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-label">社員番号(半角)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class="input-name-wrap">
        <%= f.text_field :employee_number, class:"input-name", id:"employee-number", name:"employee-number", placeholder:"例) 1904001" %>
      </div>
    </div>
    <%# /社員番号 %>
    <%# 雇用形態 %>
    <div class="form-group">
      <div class="form-text-wrap">
        <div class="weight-bold-text">
          <label class="form-label">雇用形態</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box", id:"status"}) %>
      </div>
    </div>
    <%# /雇用形態 %>
    <%# 名前 %>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-label">名前(全角)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class="input-name-wrap">
        <%= f.text_field :last_name, class:"input-name", id:"last-name", name:"last-name", placeholder:"例) 山田" %>
        <%= f.text_field :first_name, class:"input-name", id:"first-name", name:"first-name", placeholder:"例) 太郎" %>
      </div>
    </div>
    <%# /名前 %>
    <%# 名前カナ %>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-label">名前カタカナ(全角)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class="input-name-wrap">
        <%= f.text_field :last_name_k, class:"input-name", id:"last-name-k", name:"last-name-k", placeholder:"例) やまだ" %>
        <%= f.text_field :first_name_k, class:"input-name", id:"first-name-k", name:"first-name-k", placeholder:"例) たろう" %>
      </div>
    </div>
    <%# /名前カナ %>
    <%# 画像 %>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-label">画像</label>
      </div>
      <div class="field">
        <%= f.label :image, name: "teacher-image", id: "teacher-image" %>
        <%= f.file_field :image, name: "teacher-image" %>
      </div>
    </div>
    <%# /画像 %>
    <%# ニックネーム %>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-label">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :nickname, class:"input-default", id:"nickname", name:"nickname", placeholder:"例) 太郎", maxlength:"40" %>
    </div>
    <%# /ニックネーム %>
    <%# メールアドレス %>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-label">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", name:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <%# /メールアドレス %>
    <%# パスワード %>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-label">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", name:"password", placeholder:"6文字以上の半角英数字" %>
      <p class="info-text">※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-label">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", name:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <%# /パスワード %>

    <div class="register-btn">
      <%= f.submit "情報登録" ,class:"btn-primary" %>
    </div>

  <% end %>

  <%= render "teachers/shared/links" %>
</div>
