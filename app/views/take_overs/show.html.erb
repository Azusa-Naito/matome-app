<%= render "shared/teacher_classroom_bar" %>

<div class="btn-box">
  <div class="col-sm-8">
    <div class="select-box top">授業範囲</div>
    <%= @take_over.content %>
    <div class="select-box top">授業内容</div>
    <%= @take_over.detail %>
    <div class="select-box top">学生の様子</div>
    <%= @take_over.appearance %>
  </div>

  <% if current_teacher.id == @take_over.teacher_id %>
    <div class="col-md-2">
      <%= link_to '編集', edit_classroom_take_over_path(@classroom.id, @take_over.id), method: :get, class: "btn-primary" %>
      <%= link_to '削除', classroom_take_over_path(@classroom.id, @take_over.id), method: :delete, data: { confirm: '削除しますか？' }, class: "btn-primary" %>
    </div>
  <% end %>
</div>